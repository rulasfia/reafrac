{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env.*local"],
	"tasks": {
		"dev": {
			"cache": false,
			"persistent": true
		},
		"build": {
			"dependsOn": ["lint", "^build"],
			"outputs": ["dist/**", ".next/**", "!.next/cache/**"]
		},
		"start": {
			"cache": false,
			"persistent": true
		},
		"lint": {
			"cache": false
		},
		"test": {
			"dependsOn": ["^build"]
		},
		"tsc": {
			"dependsOn": ["^build"]
		},
		"db:browse": {
			"cache": false,
			"persistent": true
		},
		"db:push": {
			"cache": false
		},
		"db:generate": {
			"cache": false
		},
		"db:migrate": {
			"cache": false
		}
	}
}
