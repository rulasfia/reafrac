{
	"name": "reafrac",
	"private": true,
	"type": "module",
	"license": "Apache-2.0",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"dev": "turbo run dev",
		"build": "turbo run build",
		"start": "turbo run start",
		"test": "turbo run test",
		"lint": "turbo run lint",
		"tsc": "turbo run tsc",
		"db:browse": "turbo run db:browse --filter=@reafrac/database",
		"db:push": "turbo run db:push --filter=@reafrac/database",
		"db:generate": "turbo run db:generate --filter=@reafrac/database",
		"db:migrate": "turbo run db:migrate --filter=@reafrac/database",
		"changeset": "changeset",
		"version-packages": "changeset version"
	},
	"devDependencies": {
		"@changesets/cli": "^2.29.7",
		"@prettier/plugin-oxc": "^0.0.4",
		"@types/bun": "^1.3.3",
		"oxlint": "^1.25.0",
		"prettier": "3.6.2",
		"prettier-plugin-tailwindcss": "^0.7.1",
		"turbo": "^2.4.0"
	},
	"packageManager": "bun@1.3.1"
}
